
@model JNPShuttle.Models.LoginUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>JNP Shuttles</title>

    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/Smart Login/css/style.css" rel="stylesheet" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/Smart Login/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

    <link rel="icon" href="~/icon.png" sizes="32x32" />   



</head>
<body class="bgSizeContain">

    <h1>JNP Shuttles</h1>
    <div class=" w3l-login-form">
        @*<h2>Login Here</h2>*@
        @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post))
        {

            <div class=" w3l-form-group">
                @Html.LabelFor(model => model.Username)
                <div class="group">
                    <i class="fas fa-user"></i>
                    @Html.EditorFor(model => model.Username)
                </div>
            </div>
            <div class=" w3l-form-group">
                @Html.LabelFor(model => model.Password)
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model=>model.Password)
                </div>
            </div>
            <div class="forgot">
                
                @this.Session["Logon Error Message"]
               
            </div>
            <button type="submit">Login</button>
        }
            
        </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2019 JNP Shuttles. All Rights Reserved | Powered by <a href="http://bsil.co.nz">BSIL</a></p>
    </footer>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
