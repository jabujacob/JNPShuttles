@model JNPPortal.Models.User

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Ajax.StarkAjaxFormSubmiter("frmUser", "tbUser", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                <small>@ViewBag.Title</small>
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of User</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">
                    <div class="alert alert-success alert-dismissable" id="dvMsgUser" style="display:none;">
                        <i class="fa fa-apple"></i>
                        <b> Delete Successfully. </b>
                    </div>
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                
                                <tr>
                                    <td>Password</td>
                                    <td>@Html.DisplayFor(model => model.Password)</td>
                                </tr>
                                <tr>
                                    <td>FirstName</td>
                                    <td>@Html.DisplayFor(model => model.FirstName)</td>
                                </tr>
                                <tr>
                                    <td>MiddleName</td>
                                    <td>@Html.DisplayFor(model => model.MiddleName)</td>
                                </tr>
                                <tr>
                                    <td>LastName</td>
                                    <td>@Html.DisplayFor(model => model.LastName)</td>
                                </tr>                                                                
                                <tr>
                                    <td>Email</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                
                                <tr>
                                    <td>IsActive</td>
                                    <td>@Html.DisplayFor(model => model.IsActive)</td>
                                </tr>
                                
                                <tr>
                                    <td>Dated</td>
                                    <td>@Html.DisplayFor(model => model.Dated)</td>
                                </tr>

                            </table>
                            <div class="box-footer">

                                  @using (Html.BeginForm("Delete", "User", FormMethod.Post, new {  id = "frmUser" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete","submit","btn btn-danger","")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



